<%= image_tag(@flat.picture_url) %>
<h1><%= @flat.name %></h1>

<p><%= @flat.description %></p>
<div class='d-flex'>
  <p><i class="fa-solid fa-users"></i> <%= @flat.number_of_guests %></p>
  <p><i class="fa-solid fa-hand-holding-dollar ms-3"></i> <%= @flat.price_per_night %></p>
</div>
<div class='d-flex'>
  <p><%= link_to "Edit", edit_flat_path, class: 'btn btn-primary' %></p>
  <p><%= link_to "Back to all flats", flats_path, class: 'btn btn-outline-primary ms-3' %></p>
</div>
