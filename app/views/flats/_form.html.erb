  <%= simple_form_for(flat) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description, as: :text %>
      <%= f.input :number_of_guests, as: :integer %>
      <%= f.input :price_per_night, as: :integer %>
      <%= f.input :picture_url %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %> <%= link_to 'Cancel', flats_path, class: 'btn btn-danger ms-2' %>
    </div>
  <% end %>
