<div class='d-flex justify-content-between'>
  <h1>All our Flats (<%= @flats.length %>)</h1>
  <p><%= link_to "Add Flat", new_flat_path, class: 'btn btn-primary' %></p>
</div>
<% @flats.each do |flat| %>
<div class='card my-3'>
  <div class='card-body'>
    <%= image_tag(flat.picture_url)  %>
    <h5 class='card-title'><%= flat.name %></h5>
    <p><%= flat.description %></p>
    <div class='d-flex'>
      <p><i class="fa-solid fa-users"></i> <%= flat.number_of_guests %></p>
      <p><i class="fa-solid fa-hand-holding-dollar ms-3"></i> <%= flat.price_per_night %></p>
    </div>
    <div class='d-flex'>
      <%= link_to "More info", flat_path(flat), class: 'h6 text-primary me-3' %>
      <%= link_to "Edit", edit_flat_path(flat), class: 'h6 text-warning me-3' %>
      <%= link_to "Remove", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'h6 text-danger' %>
    </div>
  </div>
</div>
<% end %>
